---
export interface Props {
  heading?: string;
  text?: string;
  showBtn?: boolean;
  showImage?: boolean;
  showInput?: boolean;
}

const { heading = "Welcome To The Astro Crash Course!", text = "Build super fast HTML-first websites using your favorite JavaScript frameworks", showBtn = false, showImage = false, showInput = false } = Astro.props as Props;
---
<section class="py-10 md:py-35 lg:py-40 px-0 md:px-10 lg:px-20 bg-gradient-to-b from-white to-gray-200 border-b-4 border-l-4 border-white rounded-lg lg:max-w-[78%] mx-auto">
  <div class="container mx-auto px-4">
    <div class="showcase-text text-center">
      <h1 class="text-4xl font-bold mb-4">
        {heading.split(' ').map((word, index) => (
          <span
            class={`${
              word.toLowerCase().includes('featured') ||
              word.toLowerCase().includes('beyond') ||
              word.toLowerCase().includes('individuals') ||
              word.toLowerCase().includes('business') ||
              word.toLowerCase().includes('insights')
                ? 'text-[#ff601f]'
                : ''
            }`}
            key={index}
          >
            {word} {index !== heading.split(' ').length - 1 ? ' ' : ''}
          </span>
        ))}
      </h1>
      <p class="text-lg">{text}</p>
      {showInput && (
        <input
          type="text"
          class="mt-4 p-2 w-full rounded border border-gray-300 focus:ring focus:ring-indigo-300"
          placeholder="Enter something"
        />
      )}
    </div>
  </div>
</section>
