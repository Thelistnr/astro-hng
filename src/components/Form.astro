                <div  class={`col-auto individual_link form_link`}>Individual</div>
            </div>
            <form id = 'business_form' class="row justify-content-center" action="">
                <div class="col-10 col-sm-8 col-lg-5">
                    <div class="row mb-4">
                        <div class="col">
                            <label for="company_name">Company Name</label>
                            <input type="text" id="company_name" class="form-control" placeholder="Enter business name">
                        </div>
                    </div>
                    <div class="row mb-4">
                        <div class="col">
                            <label for="Business Email Address">Business Email Address</label>
                            <input type="text" id="Business Email Address" class="form-control" placeholder="Enter email address">
                        </div>
                    </div>
                    <div class="row mb-4">
                        <div class="col">
                            <label for="subject">Subject (Optional)</label>
                            <input type="text" id="subject" class="form-control" placeholder="Enter subject">
                        </div>
                    </div>
                    <div class="row mb-4">
                        <div class="col">
                            <label for="exampleFormControlTextarea1" class="form-label">Tell us what you need.</label>
                            <textarea class="form-control" id="exampleFormControlTextarea1" row ='3' placeholder="Type your message..."></textarea>
                          </div>
                    </div>
                    <div class="row mb-5">
                        <button type = 'button' class="col btn btn-primary">SEND MESSAGE</button>

                    </div>
                </div>
            </form>
            <form id = 'individual_form'  class="row justify-content-center" action="" style = 'display:none'>
                <div class="col-10 col-sm-8 col-lg-5">
                    <div class="row mb-4">
                        <div class="col">
                            <label for="full_name">Full Name</label>
                            <input type="text" id="full_name" class="form-control" placeholder="Enter full name">
                        </div>
                    </div>
                    <div class="row mb-4">
                        <div class="col">
                            <label for="email_Address">Email Address</label>
                            <input type="text" id="email_Address" class="form-control" placeholder="Enter email address">
                        </div>
                    </div>
                    <div class="row mb-4">
                        <div class="col">
                            <label for="subject">Subject (Optional)</label>
                            <input type="text" id="subject" class="form-control" placeholder="Enter subject">
                        </div>
                    </div>
                    <div class="row mb-4">
                        <div class="col">
                            <label for="exampleFormControlTextarea1" class="form-label">Tell us what you need.</label>
                            <textarea class="form-control" id="exampleFormControlTextarea1" row ='3' placeholder="Type your message..."></textarea>
                          </div>
                    </div>
                    <div class="row mb-5">
                        <button type = 'button' class="col btn btn-primary">SEND MESSAGE</button>

                    </div>
                </div>
            </form>
        </div>
    </div>
   
