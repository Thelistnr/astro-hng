<script>
    let business_form = document.getElementById('business_form');
    let individual_form = document.getElementById('individual_form');

    const business_link = document.querySelector(".business_link");
    business_link.addEventListener("click", () => {
        console.log("Hello, on client");
        business_form.style.display = 'flex'
        business_link.classList.add('form_link_active');
        business_link.classList.remove('form_link');

        individual_form.style.display = 'none';
        individual_link.classList.add('form_link');
        individual_link.classList.remove('form_link_active');

    });

    const individual_link = document.querySelector(".individual_link");
    individual_link.addEventListener("click", () => {
        console.log("Hello, on client");
        business_form.style.display = 'none'
        business_link.classList.add('form_link');
        business_link.classList.remove('form_link_active');

        individual_form.style.display = 'flex'
        individual_link.classList.add('form_link_active');
        individual_link.classList.remove('form_link');
    });
   
</script>

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- <title>Bootstrap demo</title> -->
